<h2>User</h2>
<table>
  <%= form_for @user do |form| %>  

    <%= form.error_messages :header_message => "Validation Message",:message => "You'll need to validate the following fields:",
      :header_tag => :h5 ,:class=>"alert alert-error"%>  


    <tr>
      <td><%= form.label :mobile, "Mobile" %></td>
      <td><%= form.text_field :mobile %></td>
    </tr>
    <tr>
      <td><%= form.label :password, "Password" %></td>
      <td><%= form.password_field :password %></td>
    </tr>
    <tr>
      <td><%= form.label :password_confirmation, "Password confirmation" %></td>
      <td> <%= form.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= form.submit "Submit" ,:class=>"btn btn-primary"%>
      </td>
    </tr>
    </table>
<%end%>

